pipeline {
    agent any

    stages {
        stage('w/ docker') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                '''
            }
        }

        stage('Test Build') {  // Changed stage name to avoid duplication
            agent {
                docker {
                    image 'node:18-alpine'  // Corrected image name format
                    reuseNode true
                }
            }
            steps {
                echo 'Test stage'
                sh '''
                    test -f build/index.html
                    npm test
                '''  // Added missing closing quote here
            }
        }
    }

    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}
